@model List<AciliyetListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Count > 0)
{

<a asp-action="EkleAciliyet" asp-controller="Aciliyet" class="btn btn-sm btn-outline-dark my-2"><i class="fas fa-plus-circle mr-2"></i>Yeni Aciliyet  </a>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Tanım</th>
                <th>İşlem</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Tanim</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="GuncelleAciliyet" asp-controller="Aciliyet" asp-route-id="@item.Id"><i class="fas fa-edit mr-2"> </i>Düzenle</a>
               </td>
            </tr>
            }
        </tbody>
    </table>

}
else
{
<div class="text-center  mt-4">
    <p class="lead">
        Sistemde Kayıtlı Aciliyetin Yok
    </p>
    <a asp-action="EkleAciliyet" asp-controller="Aciliyet" class="btn btn-sm btn-info my-2"> <i class="fas fa-plus-circle mr-2"></i>Yeni Aciliyet  </a>

</div>
}