@model List<GorevListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{
    <a asp-action="EkleGorev" class="btn btn-outline-dark btn-sm my-2"><i class="fas fa-plus-circle mr-2"></i> Yeni Görev</a>
    <table class="table table-sm table-hover">
        <tr>
            <th>Ad</th>
            <th>Aciklama</th>
            <th>Oluşturma Tarihi</th>
            <th>Aciliyet Durumu</th>
            <th>İşlem</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Aciklama</td>
                <td>@item.OlusturulmaTarih.ToString("D")</td>
                <td>@item.Aciliyet.Tanim</td>

                <td>
                    <a asp-action="GuncelleGorev" class="btn btn-warning btn-sm" asp-route-id="@item.Id" asp-controller="Gorev">Düzenle<i class="fas fa-edit ml-2"></i></a>
                    <a class="btn btn-danger btn-sm" data-toggle="modal" data-target="#silmeEkrani" data-tasinacakdata="@item.Id"> Sil <i class="fas fa-times-circle ml-2"></i></a>

                </td>
            </tr>
        }
    </table>



}
else
{
    <div class="p-3 text-center mt-3 ">
        <p class="lead">
            Herhangi bir görev bulunamadı
        </p>
        <a asp-action="EkleGorev" class="btn btn-info btn-sm"><i class="fas fa-plus-circle mr-2"></i>Bir Görev Ekle</a>
    </div>
}


<!-- Button trigger modal -->
<!--<a href="#" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModal">Sil</a>-->

<!-- Modal -->
<div class="modal fade" id="silmeEkrani" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Silmek İstediğinizden  Emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hayır Vazgeç</button>
                <button type="button" id="btnSil" class="btn btn-primary">Evet Sil</button>
            </div>
        </div>
    </div>
</div>

@section JavaScript{ 
    <script type="text/javascript">

        $(document).ready(function () {
            $("#silmeEkrani").on("show.bs.modal", function (event) {
                let tetikleyenElement = $(event.relatedTarget);//butona basilan tümdataları sec
                let id = tetikleyenElement.data("tasinacakdata");//dataların icinde tasinacakdata olani al

                $("#btnSil").click(function () {//btn sile eger basıldıysa
                    $.ajax({
                        type: "Get",
                        url: "./Gorev/SilGorev",
                        data: { id: id },
                        dataType: "json",
                        contentType: "application/json; charset=utf-8;",
                        success: function () {
                            alert("işlem tamam");
                            window.location.reload();//sayfayı yenileme
                        },
                        error: function (error) {
                            alert(error.statusText);//hataları gosterir
                        }
                    })
                })
            })
        })

    </script>

}