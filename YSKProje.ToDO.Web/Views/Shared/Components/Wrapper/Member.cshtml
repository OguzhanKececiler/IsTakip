@model AppUserListDto
@{
    string active = string.Empty;
    if (TempData["Active"] != null)
    {
        active = TempData["Active"].ToString();
    }

}
<div class="border border-dark border-left-0 border-top-0 border-bottom-0 " id="sidebar-wrapper">
    <div class="sidebar-heading">
        <img src="~/img/@Model.Picture" alt="@Model.Name" style="height: 10rem!important; width:10rem!important" class="w-100 img-thumbnail" />
        @*<h4>@Model.Name @Model.SurName</h4>*@
    </div>
    <div class="list-group list-group-flush">
        <a asp-action="Index" asp-controller="Home" asp-area="Member" class="list-group-item list-group-item-action   @(active=="anasayfa"?"active":"")"><i class="fas fa-home  mr-2"></i>Anasayfa</a>



        <a asp-action="Index" asp-controller="IsEmri" asp-area="Member" class="list-group-item list-group-item-action   @(active=="isemri"?"active":"")"><i class="fas fa-arrow-alt-circle-down  mr-2"></i>Gelen İş Emirleri</a>
        <a asp-action="Index" asp-controller="Gorev" asp-area="Member" class="list-group-item list-group-item-action @(active=="gorev"?"active":"")"> <i class="fas fa-arrow-alt-circle-up   mr-2"></i>Tamamladığım İşlemler</a>


        <a asp-action="Index" asp-controller="Bildirim" class="list-group-item list-group-item-action position-relative  @(active=="bildirim"?"active":"")">
            <i class="fas fa-bell  mr-2   mr-2"></i>

            @if (ViewBag.Bildirimsayisi > 0)
            {
                <sub class="badge badge-info badge-pill position-absolute" style="bottom:0.625rem!important;left:1.7rem!important"><small> @ViewBag.Bildirimsayisi</small></sub>
            }

            Bildirimler

        </a>
        <a asp-action="Index" asp-controller="Profil" class="list-group-item list-group-item-action  @(active=="profil"?"active":"")"> <i class="fas fa-user  mr-2"></i>Profilim</a>

        <a asp-area="" asp-action="CikisYap" asp-controller="Home" class="list-group-item list-group-item-action "> @*eger asp-area yazıp bos bırakılsan onun areası yok anlasılır ana dizinde arar controller actionu*@    <i class="fas fa-sign-out-alt  mr-2"></i>Çıkış Yap</a>
    </div>
</div>